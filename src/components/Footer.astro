<style>
  .footer {
    max-width: 80rem;
    width: 100%;
    margin: 2rem auto;
    gap: 1.5rem;
    padding: 2rem;
    border: 0.3rem dashed #222;
    border-radius: 0.25rem;
  }

  .footer__brand {
    font-size: 4rem;
    font-weight: bold;
  }

  .footer__email {
    color: #999;
  }

  .footer__copy {
    color: #7ed380;
    margin-top: 0.5rem;
  }

  .nav {
    margin-top: 0.5rem;
  }

  .nav__link {
    color: #999;
    margin-right: 1rem;
  }

  .nav__link:hover {
    color: #fff;
