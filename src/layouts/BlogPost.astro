---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "./Layout.astro";

type Props = CollectionEntry<"blog">["data"];

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  image = "/placeholder-social.jpg",
} = Astro.props;
---

<Layout title={title} description={description} image={image}>
  <main>
    <a href="/blog" class="back">Back</a>
    <article class="content">
      <div class="hero">
        {
          heroImage && (
            <img
              class="hero__img"
              width={720}
              height={360}
              src={heroImage}
              alt=""
            />
          )
        }
        <div class="hero__content">
          <h1 class="title">{title}</h1>
          <p>{description}</p>
        </div>
      </div>

      <FormattedDate date={pubDate} />
      {
        updatedDate && (
          <div class="last-updated-on">
            Last updated on <FormattedDate date={updatedDate} />
          </div>
        )
      }

      <hr />
      <slot />
    </article>
  </main>
</Layout>

<style is:global>
  .content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .content h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .content h4 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .content p {
    font-size: 1.15rem;
    color: #999;
    margin: 1rem 0;
  }

  .content hr {
    border-width: 1px;
    border-color: #111;
    max-width: 5rem;
    margin: 2rem 0;
    width: 100%;
  }

  .content .astro-code {
    padding: 1rem;
    line-height: 1.5;
    margin: 1rem 0;
  }

  .content a {
    color: #7ed380;
  }

  .content blockquote {
    padding: 0.1rem 1rem;
    background-color: #1b1b1b;
    margin: 1rem;
  }

  .content p code {
  }
</style>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 25rem;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.5);
    margin-bottom: 1rem;
  }
  .hero__content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.75);
    padding: 1rem;
  }

  .hero__img {
    position: absolute;
    width: 100%;
    height: auto;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;
  }

  .back {
    z-index: 1;
    position: fixed;
    top: 1rem;
    left: 1rem;
    display: inline-block;
    font-weight: bold;
    color: #9f9f9f;
    font-size: 1.25rem;
    text-decoration: none;
    padding: 1rem;
    border: 2px solid #222b22;
    text-transform: uppercase;
    border-radius: 0.25rem;

    background-color: #222;
    transition: color 0.5s, border-color 0.25s, background-color 0.5s;
  }

  .title {
    font-size: 2em;
    margin: 0.25em 0 0;
  }
  hr {
    border-top: 1px solid #ddd;
    margin: 1rem 0;
  }
  .last-updated-on {
    font-style: italic;
  }

  .content {
    max-width: 80rem;
    margin: 2rem auto;
  }
</style>
